<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fitnoise">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.events.CreateWorkoutEventActivity" />
        <activity android:name=".ui.events.UpdateWorkoutEventActivity" />
        <activity android:name=".ui.events.StartWorkoutEventActivity" />
        <activity android:name=".ui.exercise.DisplayExercise" />
        <activity android:name=".ui.exercise.AddExerciseActivity" />
        <activity android:name=".ui.home.CreateProfileActivity" />
        <activity
            android:name=".ui.TermsConditionsActivity"
            android:label="@string/title_activity_terms_conditions"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.SignupActivity" />
        <activity android:name=".ui.workout.AddWorkoutActivity" />
        <activity android:name=".ui.workout.DisplayWorkoutActivity" />
        <activity android:name=".ui.ForgotPasswordActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="vnd.google.fitness.TRACK" />
            </intent-filter>
        </activity>
    </application>

</manifest>